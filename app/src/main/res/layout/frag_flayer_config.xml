<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="signage.digital.com.digitalsignage.ConfigActivity"
    android:orientation="vertical">

    <CheckBox
        android:text="Inicio automÃ¡tico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/auto"
        android:layout_alignBaseline="@+id/addimage"
        android:layout_alignBottom="@+id/addimage"
        android:layout_toEndOf="@+id/addimage"/>

    <Button
        android:text="+Imagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addimage"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <GridView
        android:layout_width="match_parent"
        android:id="@+id/list"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/addimage"
        android:numColumns="2"/>

</RelativeLayout>
